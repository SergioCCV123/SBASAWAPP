@model SBASAWAPP.CONTACTO

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
