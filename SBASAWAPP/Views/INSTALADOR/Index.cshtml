@model IEnumerable<SBASAWAPP.INSTALADOR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<section id="main">
    <div class="inner">

        <section id="one" class="wrapper style1">
            <header class="special">
                <h2>Informacion de Instaladores</h2>
            </header>
            <div class="content">
                <table id="MiTabla" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Nombre")
                            </th>
                            <th>
                                @Html.DisplayName("Fecha de registro")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdRol }) |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.IdRol }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdRol })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </section>
    </div>
</section>