@model IEnumerable<SBASAWAPP.FACTURA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<section id="main">
    <div class="inner">

        <section id="one" class="wrapper style1">
            <header class="special">
                <h2>Informacion de Facturas</h2>
            </header>
            <div class="content">
                <table class="table" id="MiTabla" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Id Usuario")
                            </th>
                            <th>
                                @Html.DisplayName("Fecha")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IVA)
                            </th>
                            <th>
                                @Html.DisplayName("Total")
                            </th>
                            <th>
                                @Html.DisplayName("Numero de pago")
                            </th>
                            <th>
                                @Html.DisplayName("Descuento")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDUSUARIO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FECHA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IVA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TOTAL)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NUMPAGO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DESCUENTO)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IDFACTURA }) |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.IDFACTURA }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IDFACTURA })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</section>
